{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["dom", "ES6", "ES2015"],
    "noEmit": true,
    "isolatedModules": true,

    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"]
}
